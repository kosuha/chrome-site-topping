{
  "manifest_version": 3,
  "name": "Site Topping",
  "version": "1.0",
  "description": "Site Topping Extension",
  "permissions": [
    "activeTab",
    "scripting",
    "identity",
    "tabs",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*/*",
    "http://localhost:8000/*",
    "https://api.sitetopping.com/*"
  ],
  "action": {
    "default_title": "Site Topping 열기/닫기"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.tsx"],
      "type": "module"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", ".vite/*"],
      "matches": ["*://*/*"]
    }
  ]
}